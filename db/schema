
CREATE TABLE profile (
	userid serial NOT NULL,
	username varchar(50) NOT NULL,
	"password" varchar(50) NOT NULL,
	firstname varchar(50) NOT NULL,
	lastname varchar(50) NOT NULL,
	email varchar(50) NOT NULL,
    CONSTRAINT messagepost_pk PRIMARY KEY (userid),
);


CREATE TABLE messagepost (
	postid serial NOT NULL,
	topic varchar(100) NULL,
	subject varchar(100) NULL,
	postdetail varchar(200) NULL,
	"timestamp" date NULL,
	userid serial NOT NULL,
	CONSTRAINT messagepost_pk PRIMARY KEY (postid),
	CONSTRAINT messagepost_fk FOREIGN KEY (userid) REFERENCES profile(userid)
);


CREATE TABLE knowledge_schema.reply (
	replyid serial NOT NULL,
	postid serial NOT NULL,
	userid serial NOT NULL,
	replydetail varchar(200) NULL,
	"timestamp" timestamp NULL
);
